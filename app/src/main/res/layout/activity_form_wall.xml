<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".FormWall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="23dp">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:background="@drawable/icon_wall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="17dp"
            android:fontFamily="@font/regular"
            android:text="parede 1 "
            android:textColor="@color/black"
            android:textSize="25sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_form"
        android:padding="20dp">

        <TextView
            android:id="@+id/text_altura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/regular"
            android:text="altura:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_altura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_altura"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/text_largura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_altura"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/regular"
            android:text="largura:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_largura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_largura"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/text_porta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_largura"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/regular"
            android:text="quantidade de porta(s):"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_porta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_porta"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/text_janela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_porta"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/regular"
            android:text="quantidade de janela(s):"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_janela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_janela"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_janela"
            android:layout_marginTop="20dp"
            android:background="@drawable/round"
            android:fontFamily="@font/black"
            android:text="adicionar"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_save"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_return"
            android:fontFamily="@font/black"
            android:text="voltar"
            android:textColor="@color/gray_text"
            android:textSize="25sp" />

    </RelativeLayout>
</LinearLayout>